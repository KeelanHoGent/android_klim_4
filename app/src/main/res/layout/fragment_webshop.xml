<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.klimaatmobiel.ui.fragments.WebshopFragment">

    <data>
        <variable
            name="webshopViewModel"
            type="com.klimaatmobiel.ui.viewModels.WebshopViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/filter_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginEnd="315dp"
            android:ems="10"
            android:hint="@string/filter_hint"
            android:inputType="textPersonName"
            android:importantForAutofill="no"
            app:layout_constraintBottom_toTopOf="@id/products_list"
            app:layout_constraintEnd_toStartOf="@+id/constraintLayout_order"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/products_list"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.6"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            android:padding="4dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filter_text"
            app:listDataProducts="@{webshopViewModel.group.project.products}"
            app:spanCount="2"
            tools:itemCount="5"
            tools:listitem="@layout/grid_list_item" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/products_list"
            app:layout_constraintWidth_percent="0.4">


            <TextView
                android:id="@+id/cart_text"
                android:layout_width="0dp"
                android:layout_height="66dp"
                android:textStyle="bold"
                android:textSize="21dp"
                android:gravity="center"
                android:textColor="@color/colorBlack"

                app:projectBudgetBinding="@{webshopViewModel.group.project.projectBudget}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Winkelmandje - €100 euro budget"/>


            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/order_preview_list"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cart_text"
                app:listDataOrderPreview="@{webshopViewModel.group.order.orderItems}"
                tools:itemCount="3"
                tools:listitem="@layout/order_preview_list_item" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:scrollbars="vertical"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorBlack"

                app:groupSpentBinding="@{webshopViewModel.group.order.totalOrderPrice}"
                app:layout_constraintBottom_toTopOf="@+id/complete_order_button"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Totaal: €234"
                />

            <Button
                android:id="@+id/complete_order_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="12dp"

                android:background="@color/colorPrimary"
                android:text="@string/complete_order"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
